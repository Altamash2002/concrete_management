        </div>

        <div class="my-2 inputs row justify-content-center">
        <%= f.label :'56days', class: 'label col-md-2 m-1 text-md-end mx-auto' %>
        <div class="col-md-2 m-0 p-0 my-md-0 my-1 pe-md-1">
            <%= f.text_field :'56days_attempt1', class: 'w-100 h-100', placeholder: 'attempt 1' %>
        </div>
        <div class="col-md-2 m-0 p-0 my-md-0 my-1 px-md-1">
            <%= f.text_field :'56days_attempt2', class: 'w-100 h-100', placeholder: 'attempt 2' %>
        </div>
        <div class="col-md-2 m-0 p-0 my-md-0 my-1 px-md-1">
            <%= f.text_field :'56days_attempt3', class: 'w-100 h-100', placeholder: 'attempt 3' %>
        </div>
        <div class="col-md-2 m-0 p-0 my-md-0 my-1 px-md-1">
