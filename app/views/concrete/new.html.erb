        <%= f.text_field :'m_silica_dosage', class: 'col-md-10 mx-auto' %>
        </div>

        <div class="my-2 inputs row justify-content-center">
        <%= f.label :'03days', class: 'label col-md-2 m-1 text-md-end mx-auto' %>
