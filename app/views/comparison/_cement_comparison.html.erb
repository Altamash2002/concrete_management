<style>
  .previous-link{
      color:  #565A8E;
    }
</style>
<div id="cement_wise">
<div class="graph-head text-center mt-4">
    <h2>Cement-wise Comparison Graph</h2>
</div>
<div class="col-md-6">
  <div class="row">
    <% if params[:building_id]%>
      <div class="col-md-2 previous-link">
        <%= link_to strength_graph_index_path(building_id: params[:building_id], c_type: params[:c_type]), class: "dropdown-item child row align-items-center container-fluid m-0" do %>
          <span style="font-size: 16px; font-weight: bold;">BUILDINGS ></span>
        <% end %>
      </div>
    <% end %>
    <% if params[:structure_id]%>
      <div class="col-md-2 previous-link">
        <%= link_to strength_graph_structure_path(building_id: params[:building_id], c_type: params[:c_type]), class: "dropdown-item child row align-items-center container-fluid m-0" do %>
          <span style="font-size: 16px; font-weight: bold;">STRUCTURES ></span>
        <% end %>
      </div>
    <% end %>
    <% if params[:grade_id]%>
      <div class="col-md-2 previous-link">
        <%= link_to strength_graph_grade_path(building_id: params[:building_id], structure_id: params[:structure_id], c_type: params[:c_type]), class: "dropdown-item child row align-items-center container-fluid m-0" do %>
          <span style="font-size: 16px; font-weight: bold;"> &nbsp; GRADES ></span>
        <% end %>
      </div>
    <% end %> 
  </div>
</div>

<% if params[:building_id] %>
  <div class="container-fluid my-3 row justify-content-center mx-auto">
    <div class="my-12 px-4 py-4 my-sm-0 bg-white p-3 chart-container rounded-3 col-md-10 m-0 mx-2">
      <h6 class="d-flex justify-content-center">
        <div class="col-md-6">
          <% if params[:building_name] %>
            <span style="font-size: 16px;">Building: <%= params[:building_name] %></span>
          <% end %>
        </div>
        <div claa="col-md-6">
          <% if params[:grade_name] %>
            <span class="ml-auto" style="font-size: 16px;">Grade: <%= params[:grade_name] %></span>
          <% end %>
        </div>
      </h6>
    </div>
  </div>
<% else %>
<% end %>

          



<div class="container-fluid my-3 row justify-content-center mx-auto">
    <div class="my-3 px-4 py-4 my-sm-0 container-fluid bg-white p-3 chart-container rounded-3 col-md-10 m-0 mx-2">
        <canvas id="myChart" data-controller="barchart" data-bardata="<%= @cement_data %>" data-xtitle="Cement Brands" data-ytitle="Average strength(kg/sq.cm) " data-annotation="<%= @annotation %>" ></canvas>
    </div>
</div>
</div>