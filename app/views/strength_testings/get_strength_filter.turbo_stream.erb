<!-- css  -->
<style>
    .table-content {
        margin: 0px 2% 50px 2%;
        text-align: center;
    }

    th , td {
        text-align: center;
        vertical-align: middle;
    }
    .main-container{
        background-color: whitesmoke;
    }
    .table{
        background-color: white;
    }
    #table-list{
        box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.25);
    }

</style>

<!-- form view of a table -->
<div class="main-container">
    <!-- filter bar -->
    <%= render 'strength_testings/strength_filter' %>
    <%= turbo_stream.replace "strength_testing_table" do %>
        <%= render 'strength_testings/strength_table' %>
      <% end %>
</div>

