<style>  
  @media only screen and (min-width:321px) and (max-width:568px) {
    .s-label {
      text-align: center !important;
    }

    .s-label select {

      width: 100% !important;
    }

    .input {

      width: 100% !important;
    }

    .text-m {
      text-align: center !important;
      margin: 0 !important;
      padding: 0 !important;
    }
  }
</style>


<div class="container-fluid p-3 pb-0text -center col-lg" style="overflow-x: hidden;">
    <div class="row justify-content-center align-items-center rounded-3 filterBar mx-md-3 mt-md-4 text-dark text-center pt-3" style="background-color: white; box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.25);">
        <div class="col-md-8 row justify-content-center align-items-end mb-4">
          <div class="col-md-2">
              <input class="form-check-input" type="checkbox" value="" id="date">
              <label class="form-check-label fw-semibold" for="date">
                  Date
              </label>
          </div>
          <form class="col-md-5" action="">
              <label class="From" for="from_date">From:</label>
              <br />
              <input class="input rounded w-100" type="date" id="from_date" name="from_date" max='<%= Date.current %>'
              style="padding: 6px; ;background: whitesmoke; border: none;" data-controller='filter'  data-path='<%= request.path %>' data-action="change->filter#setFilter" >
          </form>
    
          <form class="col-md-5" action="">
              <label class="From" for="to_date">To:</label>
              <br />
              <input class="input rounded w-100" type="date" id="to_date" name="to_date" max='<%= Date.current %>'
                style="padding: 6px; ;background: whitesmoke; border: none;" data-controller='filter'  data-path='<%= request.path %>' data-action="change->filter#setFilter">
          </form>
        </div>  
        
    </div>
</div>