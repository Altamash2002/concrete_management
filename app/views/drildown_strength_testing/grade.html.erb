 
  
<style>
  .drill-bg{
    background-color: #115679;
    border-radius: 10px;
    height: 120px;
    vertical-align: center;
  }
  .heading-div{
    text-align: center;
    background-color: #115679;
    color: white;
    padding: 5px 40px;
  }
  .comp-heading{
    font-size: 30px;
    font-weight: 700;
  }
  .center{
        padding-top: 50px;
  }
  .color-text{
    color: black;
  }
  .privious-link{
    color: #565A8E;
  }
  .shadow{
    box-shadow: 10px 10px 5px lightblue;
  } 
  .project{
    font-size: 16px; 
    font-weight: bold;
  }
</style> 

<div class=" ">
  <div class="col-md-3">
    <div class="row ">
      <div class="col-md-3 privious-link">
        <%= link_to "/drildown_strength_testing/project", class: "dropdown-item child row align-items-center container-fluid m-0" do %>
          <span class="project">PROJECTS ></span>
        <%end%>
      </div>
      <div class="col-md-3 privious-link">
        <%= link_to drildown_strength_testing_building_path(project_id: params[:project_id]), class: "dropdown-item child row align-items-center container-fluid m-0" do %>
          <span class="project">BUILDINGS ></span>
        <% end %>
      </div>
    </div>
  </div>
</div> 


<div class="container-fluid   py-5 d-flex justify-content-center align-items-center">
  <div class="rounded-3 shadow" style="width:80%; height: 319px; object-fit: cover;background: url(<%= asset_path 'grade.jpg' %>);background-size: cover;">
    <div class="row align-items-center h-100">
      <div class="col-md-12">
        <h2 class="mx-auto text-center bg-white rounded-3 p-3" style="width: fit-content">Grades</h2>
      </div>
    </div>
  </div>
</div>
   
<div class="container-fluid"style="width: 80%;">
  <div class="row p-0 mx-auto mb-5 container-fluid justify-content-center">
    <div class="col-md-4 col-sm-6 py-2">
      <div class="card shadow">
        <div class="card-body d-flex align-items-center " style="padding-top: 25px; padding-bottom: 25px;">
          <img src="<%= asset_path 'M700.svg' %>" alt="Project Image" class="img-fluid me-3" style="max-width: 70px;">
          <h5><%= link_to strength_testings_path(project_id: params[:project_id], building_id: @building_id), class: "text-decoration-none color-text" do %>
            Show All
          <% end %></h5>
        </div>
      </div>
    </div>
    <% @grades.each do |grade| %>
      <div class="col-md-4 col-sm-6 py-2">
        <div class="card shadow">
          <div class="card-body d-flex align-items-center " style="padding-top: 25px; padding-bottom: 25px;">
            <img src="<%= asset_path 'M700.svg' %>" alt="Project Image" class="img-fluid me-3" style="max-width: 70px;">
            <h5><%= link_to grade.name, strength_testings_path(project_id: @project_id, building_id: @building_id, grade_id: grade.id), class: "text-decoration-none color-text" %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 
